{% extends 'layout_login.html.twig' %}

{% block meta_title %}{{ 'Login'|trans }}{% endblock %}

{% block content %}

<div class="page page-center">
    <div class="container-tight py-4">
        <div class="text-center mb-4">
            <a href="{{ '/'|link }}" class="navbar-brand navbar-brand-autodark">
                <img src="{{ guest.system_company.logo_url }}" alt="Boxbilling">
            </a>
        </div>
        <div class="card card-md">
            <div class="card-body">
                {% if create_admin %}
                    <h2 class="card-title text-center mb-4">{{ 'Create main administrator account'|trans }}</h2>
                    <form class="api-form" action="{{ 'api/guest/staff/create'|link }}" method="post" data-api-redirect="{{ 'index'|alink }}">
                        <div class="mb-3">
                            <label class="form-label" for="req1">{{ 'Email'|trans }}</label>
                            <div class="col">
                                <input class="form-control" id="req1" type="email" name="email" value="{{ request.email }}" placeholder="{{ 'Enter your email address'|trans }}">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="req2">{{ 'Password'|trans }}</label>
                            <div class="col">
                                <input class="form-control" id="req2" type="password" name="password" value="{{ request.password }}" placeholder="{{ 'Enter your password'|trans }}">
                            </div>
                        </div>
                        <div class="mb-3">
                            <input type="submit" value="{{ 'Create administrator account'|trans }}" class="btn btn-primary w-100">
                        </div>
                    </form>
                {% else %}
                    <form class="api-form" action="{{ 'api/guest/staff/login'|link }}" method="post" data-api-redirect="{{ 'index'|alink }}">
                        <div class="mb-3">
                            <label class="form-label" for="req1">{{ 'Email'|trans }}</label>
                            <input class="form-control"
                                id="req1"
                                type="email"
                                name="email"
                                value="{{ request.email }}"
                                placeholder="{{ 'Enter your email address'|trans }}"
                                required
                                autofocus>
                        </div>
                        <div class="mb-3">
                            <label class="block mb-2 text-sm font-medium" for="req2">{{ 'Password'|trans }}</label>
                            <input class="form-control"
                                id="req2"
                                type="password"
                                name="password"
                                value="{{ request.password }}"
                                placeholder="{{ 'Enter your password'|trans }}"
                                required>
                        </div>
                        <div class="mb-3">
                            <input type="checkbox" id="remember" class="mr-1" name="remember" value="1" checked>
                            <label for="remember">{{ 'Remember me'|trans }}</label>
                        </div>
                        <div class="form-footer">
                            <input
                                type="submit"
                                class="btn btn-primary w-100"
                                value="{{ 'Sign in'|trans }}">
                        </div>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
